/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.header {
  margin: 90rpx 0 90rpx 50rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}

.header image {
  width: 200rpx;
  height: 200rpx;
}

.content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}

.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}

.zongHeader {
  display: flex;
  justify-content: space-between;
  background-color: #BBFFEE;
}

.zongHeader text {
  font-size: 30rpx;
  display: block;
  color: #9d9d9d;
  margin-left: 50rpx;
  margin-right: 50rpx;

}

.zongContainer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #E8CCFF;
}

.zongContainer text {
  font-size: 30rpx;
  display: block;
  color: #9d9d9d;
  margin-left: 50rpx;
  margin-right: 50rpx;
}

.picker-detail {
  height: 90rpx;
  line-height: 80rpx;
  background-color: #FFE4E1;
  font-size: 35rpx;
  padding:0rpx;
  overflow: hidden;
}
.picker-detail-content {
  margin-left: 70rpx;
}